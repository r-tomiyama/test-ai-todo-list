{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["app/**"]
  },
  "formatter": {
    "enabled": true,
    "ignore": ["app/__generated__/**"],
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["app/__generated__/**"],
    "rules": {
      "complexity": {
        "useLiteralKeys": "off"
      },
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
